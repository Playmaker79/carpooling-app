<link rel="stylesheet" href="stylesheets/fonts/elusive/css/animation.css"/>
<br/>
<div class="row">
        <div class="form1 container">
            <form action="/login" method="post" class="panel col-sm-6 col-md-offset-3 login-form fade-in-effect in">
                <h1 class="text-center">Welcome Back!</h1>
                 <div class="form-group">
                     <label for="emails"></label>
                     <input type="email" name="email" placeholder="user@exaple.com" class="form-control">
                 </div>
                <div class="form-group">
                    <label for="password"></label>
                    <input type="password" name="password" placeholder="*******" class="form-control">
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-primary  btn-block text-center">
                        <i class="fa-lock"></i>
                        Log In
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<br/>
<div class="row">
    <div class="container text-center">
        <% if (typeof  status == 'undefined') { %>
        <br/>
        <% } else if( status == 'invalidAccount') {%>
        <span class="alert alert-danger invalidAccount ">That password username combo doesnt seem to work :)
                </span>
        <% } else if( status == 'serviceError') {%>
        <span class="alert alert-warning invalidAccount ">OOPS! Something went wrong.Please try again later :(
                </span>
        <%}%>
    </div>
</div>
<br/>
<script>
    $('document').ready(function(){
        setTimeout(function(){
            $('.invalidAccount').fadeIn('slow');
            setTimeout(function(){
                $('.invalidAccount').slideUp('slow');
            },500);
        },2000)
    });
</script>